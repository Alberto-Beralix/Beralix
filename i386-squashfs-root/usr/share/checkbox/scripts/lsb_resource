import sys

from subprocess import Popen, PIPE


# Command to retrieve lsb release information.
COMMAND = "lsb_release -a 2>/dev/null"


def get_lsb_release():
    lsb_release_map = {
        "Distributor ID": "distributor_id",
        "Description": "description",
        "Release": "release",
        "Codename": "codename"}

    lsb_release = {}
    output = Popen(COMMAND, stdout=PIPE, shell=True).communicate()[0]
    for line in [l for l in output.split("\n") if l]:
        (key, value) = line.split(":\t", 1)
        if key in lsb_release_map:
            key = lsb_release_map[key]
            lsb_release[key] = value

    return lsb_release

def main():
    lsb_release = get_lsb_release()
    for key, value in lsb_release.iteritems():
        print "%s: %s" % (key, value)

    return 0


if __name__ == "__main__":
    sys.exit(main())
